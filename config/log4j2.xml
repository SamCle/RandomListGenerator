<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT" >
			<PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
		</Console>
		<File name="LoggerFile" fileName="log/log.log">
			<PatternLayout pattern="%d{dd/MM/yy HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Logger name="it.csttech.Logger" level="DEBUG"  additivity="true" >
			<AppenderRef ref="LoggerFile" level="DEBUG"/>
		</Logger>
		<Root level="TRACE">
			<AppenderRef ref="LoggerFile" level="TRACE" />
		</Root>
	</Loggers>
</Configuration>
